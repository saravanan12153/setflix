<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
    <h2>Released: <%= @movie.released_on %></h2>
  </header>

  <p>
    <%= @movie.description %>
  </p>

  <h3 class="no-rule">
    <%= @movie.rating %> &bull; <%= @movie.duration %>
  </h3>

  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>

  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>

  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>

  <% if current_user %>
    <% if @current_favorite %>
      <%= button_to 'UnFav' , movie_favorite_path(@movie, @current_favorite), method: :delete, class: "button unfave" %>
    <% else %>
      <%= button_to 'Fav' , movie_favorites_path(@movie), class: "button fave" %>
    <% end %>
  <% end %>
  <p>
    <%= pluralize(@fans.size, 'fan') %>
  </p>
  <% content_for :side do %>
    <% if @fans.any? %>
    <h3> Fans: </h3>
    <ul>
      <% @fans.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
        <% end %>
      </ul>
    <% end %>

    <h3> Genres </h3>
    <p>
      <ul>
        <% @genres.each do |genre| %>
          <li><%= genre.name %></li>
        <% end %>
      </ul>
    </p>
  <% end %>


  <footer>
    <nav>
      <% if current_user_admin? %>
        <%= link_to 'Edit', edit_movie_path(@movie), class: 'button' %>
        <%= link_to 'Delete', @movie,
                    class: 'button',
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </nav>
    <%= link_to "Write Review", new_movie_review_path(@movie), class: 'buttton ok review' %>
  </footer>

  <h2> Reviews: </h2>
  <%= link_to pluralize(@movie.reviews.size, "Review"), movie_reviews_path(@movie) %>
</article>


<h3>Average Review</h3>
<p>
  <%= format_average_stars(@movie) %>
</p>
